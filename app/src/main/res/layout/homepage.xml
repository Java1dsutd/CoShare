<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivity"
        tools:context="com.michelle.coshare.HomePage">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/latestBookingTV"
            android:layout_alignTop="@+id/locationPic"
            android:background="#279409"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/latestBookingTV"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="#515151"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Latest Booking"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp" />


        <ImageView
            android:id="@+id/locationPic"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/latestBookingTV"
            android:src="@drawable/telepark" />

        <TextView
            android:id="@+id/bookingDetailsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/locationPic"
            android:layout_alignEnd="@+id/latestBookingTV"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="13dp"
            android:text="Tampines Telepark \n23 December 2017"
            android:textAlignment="center"
            android:textSize="15sp" />




        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_above="@+id/accountButton"
            android:layout_alignParentStart="true"

            android:background="@null"
            android:paddingLeft="9dp"
            android:src="@drawable/addbutton" />


        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/addButton"
            android:background="@null"
            android:paddingRight="10dp"
            android:src="@drawable/cancelbutton" />


        <ImageButton
            android:id="@+id/viewButton"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/addButton"
            android:background="@null"
            android:paddingLeft="9dp"
            android:src="@drawable/viewbutton" />

        <ImageButton
            android:id="@+id/accountButton"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_below="@+id/cancelButton"
            android:layout_toRightOf="@+id/viewButton"
            android:background="@null"
            android:paddingRight="10dp"
            android:onClick="accountIntent"
            android:src="@drawable/accountbutton" />

    </RelativeLayout>

</ScrollView>